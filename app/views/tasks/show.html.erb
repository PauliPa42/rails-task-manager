<div class="container">
<h1><%= @task.title %></h1>

<h3><%= @task.details %></h3>

<p>
  <% if @task.completed == false %>
    <i class="far fa-square"></i><%= "  This task is not completed yet" %>
  <% else %>
    <i class="far fa-check-square"></i><%= "This task is completed!" %>
  <% end %>
</p>

<%= link_to "Edit this task", edit_path(@task), :class => "btn btn-primary" %>

<%= link_to "Back to list", tasks_path, :class => "btn btn-primary" %>

